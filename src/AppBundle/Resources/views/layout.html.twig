<!DOCTYPE html>
<html>

<head>
    <title>{% block title %}{% endblock %}</title>
    <meta charset="utf-8">
    {% stylesheets
        'bundles/app/css/style-blue.css'
        'bundles/app/css/lightbox.css'
    -%}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets -%}
    {% javascripts
        'bundles/app/js/html5.js'
        'bundles/app/js/jquery.js'
        'bundles/app/js/lightbox.js'
        'bundles/app/js/inquiry.js'
    -%}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts -%}
    <script type="text/javascript" charset="utf-8">
        lightbox.option({
            'resizeDuration': 200,
            'alwaysShowNavOnTouchDevices': true
        })
    </script>
    <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-37122241-1']);
        _gaq.push(['_trackPageview']);

        (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

    </script>
    <meta name="description" content="{{ meta }}">
</head>

<body>

    <div id="wrapper">

        <header>
            <h1><a href="{{ path('app_default') }}">{{ 'home.header.link'|trans|raw }}</a></h1>
            <h2>{{ 'home.header.title'|trans }}</h2>
            <div class="language-switcher">
                <br>
                <a class="{% if app.request.attributes.get('_locale') == 'en' %}selected{% endif %}" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'en'})) }}">english</a> |
                <a class="{% if app.request.attributes.get('_locale') == 'ru' %}selected{% endif %}" href="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_locale': 'ru'})) }}">русский</a>
            </div>

            {% if isHomepage is not defined %}
                {{ knp_menu_render('AppBundle:Builder:topMenu') }}
            {% endif %}
        </header>

        <div id="content">

            {% block content %}
            {% endblock %}

        </div><!-- div#content -->


    </div><!-- div#wrapper -->

    <div class="clear"></div>

    <footer>
        <div class="inner">
            <address>{{ 'home.footer.address'|trans|raw }}</address>
        </div>
    </footer>

</body>

</html>
